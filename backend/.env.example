# Application Configuration
APP_NAME=EchoLingo
APP_VERSION=0.1.0
APP_DESCRIPTION="API for transcribing, translating, and generating speech from audio files"

# API Settings
API_PREFIX=""

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Directory Settings
TEMP_DIR=temp
STATIC_DIR=static
LOGS_DIR=logs

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# External API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
HUME_API_KEY=your_hume_api_key_here

# Voice Provider Configuration
# Choose between 'hume' or 'elevenlabs' (default: hume)
VOICE_PROVIDER=hume

# Hume API Configuration
HUME_VOICE_ID=30edfa2e-7d75-45fb-8ccf-e280941393ee

# Translation Provider Configuration
# Choose between 'openai' or 'sambanova'
TRANSLATION_PROVIDER=openai

# SambaNova API Configuration (Required if using sambanova provider)
SAMBANOVA_API_KEY=your_sambanova_api_key_here
SAMBANOVA_BASE_URL=https://api.sambanova.ai/v1
SAMBANOVA_TRANSLATION_MODEL=Meta-Llama-3.1-8B-Instruct

# Default Service Settings
DEFAULT_VOICE_ID=o47F6fLSHEFdPzySrC5z
DEFAULT_TTS_MODEL=eleven_multilingual_v2
DEFAULT_TRANSLATION_MODEL=gpt-4o-mini